{
  "name": "quran-components",
  "version": "0.0.40",
  "description": "Quran.com collection of common React UI components",
  "main": "lib/index.js",
  "repository": "git@github.com:quran/common-components.git",
  "author": "Quran.com",
  "license": "MIT",
  "scripts": {
    "start": "start-storybook -p 6006",
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-core/register --require ./utils/test_helper.js \"@(src|components)/**/test/*.test@(.js|.jsx)\"",
    "test:watch": "npm run test -- --watch",
    "lint": "eslint . --ext .js",
    "lint:fix": "npm run lint -- --fix",
    "prebuild": "rimraf ./lib",
    "build": "babel src --out-dir lib --copy-files --ignore test,*.stories.js --source-maps true",
    "build:watch": "npm run build -- -w",
    "postbuild": "node utils/generateModulesList.js",
    "deploy:gp": "npm run build-storybook && gh-pages -m 'update [ci skip]' -d ./build",
    "deploy:npm": "npm run build && npm publish ./",
    "build-storybook": "build-storybook -o ./build"
  },
  "files": [
    "lib",
    "src",
    "README.md"
  ],
  "config": {
    "cssModulePattern": "quran-[name]__[local][hash:base64:5]"
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.3.0",
    "@kadira/storybook": "^2.21.0",
    "@kadira/storybook-addon-options": "^1.0.1",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-plugin-transform-react-require": "^1.0.1",
    "babel-plugin-transform-require-ignore": "^0.0.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "6.13.2",
    "babel-preset-react": "6.11.1",
    "babel-preset-stage-2": "6.13.0",
    "babel-runtime": "^6.22.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.6.1",
    "classnames": "^2.2.5",
    "cross-env": "^3.1.4",
    "css-loader": "0.23.1",
    "css-modules-require-hook": "^4.0.5",
    "debug": "^2.6.0",
    "enzyme": "^2.7.1",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-import": "2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-mocha": "^4.8.0",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.1",
    "getstorybook": "^1.7.0",
    "gh-pages": "^0.12.0",
    "jsdom": "^9.9.1",
    "mocha": "^3.2.0",
    "node-sass": "^4.3.0",
    "pre-commit": "^1.2.2",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-hot-loader": "3.0.0-beta.6",
    "react-router": "^3.0.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.8",
    "webpack": "1.13.1"
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
